---
// src/components/blocks/FeaturedProjectsV19.astro

/*
================================================================================
Component: FeaturedProjectsV19
Description: A block that displays a header and a grid of featured projects.
================================================================================
*/

import ProjectCardV19 from '../cards/ProjectCardV19.astro';
import type { Props as Project } from '../cards/ProjectCardV19.astro';

// Define the properties for the entire block
export interface Props {
  heading: string;
  description: string;
  button: {
    text: string;
    url: string;
  };
  projects: Project[];
}

const { heading, description, button, projects } = Astro.props;
---

<section
  class="pt-14 md:pt-16 lg:pt-[88px] xl:pt-[100px] pb-14 md:pb-16 lg:pb-[88px] xl:pb-[100px]"
>
  <div class="container">
    <div
      class="flex flex-col md:flex-row gap-y-5 gap-x-10 justify-center lg:justify-start items-start md:items-center mb-10 md:mb-20"
    >
      <div class="flex-1">
        <h2 class="text-appear" set:html={heading}></h2>
      </div>
      <div class="flex-1 max-w-md">
        <p class="text-appear max-md:text-justify md:text-right">
          {description}
        </p>
        <ul class="justify-self-end max-md:w-full mt-5 md:mt-10 reveal-me">
          <li
            class="block md:inline-block w-full mx-auto md:w-auto text-center"
          >
            <a
              href={button.url}
              class="rv-button rv-button-white block md:inline-block"
            >
              <div class="rv-button-top">
                <span>{button.text}</span>
              </div>
              <div class="rv-button-bottom">
                <span>{button.text}</span>
              </div>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <!-- Projects Grid -->
    <div
      class="grid grid-cols-1 md:grid-cols-2 justify-items-center items-center md:items-start gap-8 gap-y-12"
    >
      <!-- Loop through projects and render a card for each -->
      {projects.map((project) => <ProjectCardV19 {...project} />)}
    </div>
  </div>
</section>

---
// src/components/blocks/TestimonialCard.astro
import { Image } from 'astro:assets';

export interface Props {
  quote: string;
  authorName: string;
  authorTitle: string;
  authorImage: ImageMetadata;
}

const { quote, authorName, authorTitle, authorImage } = Astro.props;
---
<div class="py-[30px] px-[30px] border dark:border-dark flex flex-col gap-6 reveal-me">
  <div class="flex items-center gap-[15px]">
    <figure>
      <Image src={authorImage} alt={authorName} />
    </figure>
    <div>
      <h3 class="text-2xl leading-[1.2] tracking-wide">{authorName}</h3>
      <p class="text-sm font-light leading-5 mt-[3.5px]">
        {authorTitle}
      </p>
    </div>
  </div>
  <p 
    class="italic text-base md:text-xl md:leading-[1.4] md:tracking-[0.4px]"
    set:html={quote}
  ></p>
</div>
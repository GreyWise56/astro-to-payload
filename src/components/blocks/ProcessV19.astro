---
// src/components/blocks/ProcessV19.astro

/*
================================================================================
Component: ProcessV19
Description: A block that displays a header and a grid of process steps.
================================================================================
*/

import ProcessStepCardV19 from '../cards/ProcessStepCardV19.astro';
import type { Props as ProcessStep } from '../cards/ProcessStepCardV19.astro';

// Define the properties for the entire block
export interface Props {
  badge: string;
  heading: string;
  steps: ProcessStep[];
  button: {
    text: string;
    url: string;
  };
}

const { badge, heading, steps, button } = Astro.props;
---

<section
  class="pb-14 pt-14 md:pb-16 md:pt-16 lg:pb-[88px] lg:pt-[88px] xl:pb-[100px] xl:pt-[100px]"
>
  <div class="container">
    <!-- Header -->
    <div class="text-center mb-10 md:mb-20">
      <div class="rv-badge mb-3 reveal-me">
        <span class="rv-badge-text">{badge}</span>
      </div>
      <h2 class="text-appear mb-3" set:html={heading}></h2>
    </div>
    <!-- Grid Cards -->
    <div class="flex max-xl:flex-wrap gap-[30px] justify-center">
      <!-- Loop through steps and render a card for each -->
      {steps.map((step) => <ProcessStepCardV19 {...step} />)}
    </div>

    <ul class="justify-self-center max-md:w-full mt-7 md:mt-14 reveal-me">
      <li class="block md:inline-block w-full mx-auto md:w-auto text-center">
        <a
          href={button.url}
          class="rv-button rv-button-primary block md:inline-block"
        >
          <div class="rv-button-top">
            <span>{button.text}</span>
          </div>
          <div class="rv-button-bottom text-nowrap">
            <span>{button.text}</span>
          </div>
        </a>
      </li>
    </ul>
  </div>
</section>

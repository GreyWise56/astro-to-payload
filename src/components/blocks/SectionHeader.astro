---
// src/components/blocks/SectionHeader.astro

export interface Props {
  badgeText: string;
  heading: string;
  italicizedWord: string;
  description: string;
  button: {
    text: string;
    url: string;
  };
}

const { badgeText, heading, italicizedWord, description, button } = Astro.props;

const headingParts = heading.split(italicizedWord);
---

<div class="flex flex-col md:flex-row gap-y-6 gap-x-10 justify-center lg:justify-start items-start md:items-end mb-10 md:mb-20">
  <div class="flex-1">
    <div class="rv-badge reveal-me">
      <span class="rv-badge-text">{badgeText}</span>
    </div>
    <h2 class="text-appear mt-3 md:mt-4">
      {headingParts[0]}<span class="font-instrument italic">{italicizedWord}</span>{headingParts[1]}
    </h2>
  </div>
  <div class="flex-1">
    <p class="text-appear md:text-right">
      {description}
    </p>
    <ul class="justify-self-end max-md:w-full mt-5 md:mt-10 reveal-me">
      <li class="block md:inline-block w-full mx-auto md:w-auto text-center">
        <a href={button.url} class="rv-button rv-button-white block md:inline-block">
          <div class="rv-button-top"><span>{button.text}</span></div>
          <div class="rv-button-bottom"><span>{button.text}</span></div>
        </a>
      </li>
    </ul>
  </div>
</div>
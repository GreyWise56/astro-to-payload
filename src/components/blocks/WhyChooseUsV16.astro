---
// src/components/blocks/WhyChooseUsV16.astro

/*
================================================================================
Component: WhyChooseUsV16
Description: A block that displays a header on the right and a list of
             features on the left.
================================================================================
*/

import FeatureItemV16 from '../cards/FeatureItemV16.astro';
import type { Props as Feature } from '../cards/FeatureItemV16.astro';

export interface Props {
  badge: string;
  heading: string;
  features: Feature[];
  button: {
    text: string;
    url: string;
  };
}

const { badge, heading, features, button } = Astro.props;
---

<section
  class="pt-14 md:pt-16 lg:pt-[88px] xl:pt-[100px] pb-14 md:pb-16 lg:pb-[88px] xl:pb-[100px] relative overflow-hidden"
>
  <div class="max-w-[1500px] mx-auto px-4 md:px-[30px]">
    <!-- Content Area -->
    <div
      class="flex flex-col-reverse md:flex-row-reverse gap-y-8 md:gap-5 lg:gap-10 xl:gap-x-20"
    >
      <div class="md:w-[45%]">
        <div class="[&>*:not(:first-child)]:mt-3.5">
          <!-- Loop through features and render a card for each -->
          {features.map((feature) => <FeatureItemV16 {...feature} />)}
        </div>

        <ul class="max-md:w-full mt-7 md:mt-14 reveal-me">
          <li
            class="block md:inline-block w-full mx-auto md:w-auto text-center"
          >
            <a
              href={button.url}
              class="rv-button rv-button-white block md:inline-block"
            >
              <div class="rv-button-top">
                <span>{button.text}</span>
              </div>
              <div class="rv-button-bottom">
                <span>{button.text}</span>
              </div>
            </a>
          </li>
        </ul>
      </div>
      <div class="md:w-[55%] reveal-me">
        <!-- Status Badge -->
        <div class="rv-badge mb-3.5">
          <span class="rv-badge-text">{badge}</span>
        </div>
        <h2 class="text-appear" set:html={heading}></h2>
      </div>
    </div>
  </div>
</section>

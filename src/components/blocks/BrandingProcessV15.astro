---
// src/components/blocks/BrandingProcessV15.astro

/*
================================================================================
Component: BrandingProcessV15
Description: A block that displays the branding process with a header on the
             left and a grid of steps on the right.
================================================================================
*/

import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import ProcessStepCardV15 from '../cards/ProcessStepCardV15.astro';
import type { Props as ProcessStep } from '../cards/ProcessStepCardV15.astro';

export interface Props {
  heading: string;
  subheading: string;
  button: {
    text: string;
    url: string;
  };
  steps: ProcessStep[];
  gradientImage: ImageMetadata;
}

const { heading, subheading, button, steps, gradientImage } = Astro.props;
---

<section
  class="pb-14 pt-14 md:pb-16 md:pt-16 lg:pb-[88px] lg:pt-[88px] xl:pb-[100px] xl:pt-[100px] max-w-[1600px] px-5 mx-auto overflow-hidden relative"
>
  <div class="flex flex-col lg:flex-row items-center justify-between">
    <div class="">
      <!-- Gradient Background Wrapper -->
      <div
        id="hero-gradient-wrapper"
        class="absolute w-full h-full top-0 left-0 scale-75 -z-10 blur-[85px] md:blur-[90px]"
      >
        <Image
          src={gradientImage}
          alt="gradient background"
          id="hero-gradient"
          class="absolute left-1/2 lg:left-[10%] top-1/2 md:top-1/4 max-md:-translate-y-[40%] md:-translate-y-[40%] -translate-x-1/2"
        />
      </div>
      <h2
        class="text-[38px] md:text-[55px] lg:text-[62px] xl:text-[72px] font-normal leading-[1.3] md:leading-[1.2] xl:tracking-[-2.16px] max-w-4xl text-appear-2"
        set:html={heading}
      >
      </h2>
      <p class="text-lg leading-[1.6] tracking-[0.36px] text-appear-2">
        {subheading}
      </p>
      <a href={button.url} class="rv-button rv-button-white mt-7 md:mt-14 reveal-me">
        <div class="rv-button-top text-center">
          <span class="font-normal">{button.text}</span>
        </div>
        <div class="rv-button-bottom text-center">
          <span class="font-normal">{button.text}</span>
        </div>
      </a>
    </div>
    <!--  -->

    <div class="grid grid-cols-2 gap-y-[26px]">
      <!-- Loop through steps and render a card for each -->
      {steps.map((step, index) => (
        <ProcessStepCardV15
          stepNumber={step.stepNumber}
          title={step.title}
          description={step.description}
          isBordered={index % 2 === 0}
        />
      ))}
    </div>
  </div>
</section>

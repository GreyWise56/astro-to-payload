---
// src/components/blocks/TestimonialsV6.astro
import TestimonialCardV6, { type Testimonial } from '../cards/TestimonialCardV6.astro';

export interface Props {
  heading: string;
  description: string;
  button: {
    text: string;
    url: string;
  };
  testimonials: Testimonial[];
}

const { heading, description, button, testimonials } = Astro.props;
---

<section class="service-section relative overflow-hidden pb-14 pt-14 md:pb-16 md:pt-16 lg:pb-[88px] lg:pt-[88px] xl:pb-[100px] xl:pt-[100px]">
  <div class="container">
    <div class="flex flex-col md:flex-row gap-x-10 gap-y-4 justify-center lg:justify-between items-start mb-16 lg:mb-24">
      <div class="flex-1 md:self-start">
        <h2 class="text-appear leading-[1.1]" set:html={heading}></h2>
      </div>
      <div class="max-md:w-full flex-1 md:self-end">
        <p class="text-appear max-w-lg md:place-self-end md:text-right">
          {description}
        </p>
        <ul class="justify-self-end max-md:w-full mt-5 md:mt-10 reveal-me">
          <li class="block md:inline-block w-full mx-auto md:w-auto text-center">
            <a href={button.url} class="rv-button rv-button-white block md:inline-block">
              <div class="rv-button-top">
                <span>{button.text}</span>
              </div>
              <div class="rv-button-bottom">
                <span>{button.text}</span>
              </div>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <article class="flex flex-row flex-nowrap w-fit gap-9 pl-[7%] md:pl-[20%] md:pr-10 service-wrapper overflow-x-hidden reveal-me">
    {testimonials.map(testimonial => (
      <TestimonialCardV6 testimonial={testimonial} />
    ))}
  </article>
</section>
---
// src/components/blocks/RelatedArticles.astro

/*
================================================================================
Component: RelatedArticles
Description: A block that displays a grid of related blog posts, reusing the
             BlogPostCardGrid component.
================================================================================
*/

import BlogPostCardGrid from '../cards/BlogPostCardGrid.astro';
import type { Props as BlogPostGridProps } from '../cards/BlogPostCardGrid.astro';

export interface Props {
  posts: BlogPostGridProps[];
}

const { posts } = Astro.props;
---

<div class="max-w-[1440px] mx-auto px-10 md:px-20">
  <div
    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 justify-items-center items-center md:items-start gap-6 gap-y-12 pt-7 md:pt-8 lg:pt-10 xl:pt-14"
  >
    {posts.map((post) => <BlogPostCardGrid {...post} />)}
  </div>
</div>
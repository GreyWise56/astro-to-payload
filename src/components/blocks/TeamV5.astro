---
// src/components/blocks/TeamV5.astro

/*
================================================================================
Component: TeamV5
Description: A block that displays a header and a grid of team members.
================================================================================
*/

import TeamMemberCardV5 from '../cards/TeamMemberCardV5.astro';
import type { Props as TeamMember } from '../cards/TeamMemberCardV5.astro';

export interface Props {
  eyebrow: string;
  heading: string;
  teamMembers: TeamMember[];
}

const { eyebrow, heading, teamMembers } = Astro.props;
---

<section
  class="pb-14 pt-14 md:pb-16 md:pt-16 lg:pb-[88px] lg:pt-[88px] xl:pb-[100px] xl:pt-[100px]"
>
  <div class="container">
    <!-- Section Header -->
    <div class="mb-10 lg:mb-20">
      <p
        class="font-satoshi text-center text-sm font-normal leading-6 tracking-[3px] uppercase reveal-me"
      >
        {eyebrow}
      </p>
      <h2 class="mt-3 lg:mt-5 text-center text-appear">
        {heading}
      </h2>
    </div>

    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 justify-items-center"
    >
      <!-- Loop through team members and render a card for each -->
      {teamMembers.map((member) => <TeamMemberCardV5 {...member} />)}
    </div>
  </div>
</section>

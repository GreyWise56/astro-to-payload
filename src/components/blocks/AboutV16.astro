---
// src/components/blocks/AboutV16.astro

/*
================================================================================
Component: AboutV16
Description: A centered "About" section for a marketing agency page.
================================================================================
*/

export interface Props {
  badge: string;
  heading: string;
  subheading: string;
  description: string;
  button: {
    text: string;
    url: string;
  };
}

const { badge, heading, subheading, description, button } = Astro.props;
---

<section
  class="pt-28 md:pt-32 lg:pt-44 xl:pt-[200px] pb-14 md:pb-16 lg:pb-[88px] xl:pb-[100px]"
>
  <!-- Content -->
  <div class="container">
    <div class="text-center">
      <div class="rv-badge reveal-me mb-3">
        <span class="rv-badge-text">{badge}</span>
      </div>

      <h2 class="text-appear mb-6">{heading}</h2>
      <h5 class="reveal-text reveal-me">{subheading}</h5>

      <p class="mt-3 max-w-3xl mx-auto reveal-me">
        {description}
      </p>

      <ul class="justify-self-center max-md:w-full mt-7 md:mt-14 reveal-me">
        <li class="block md:inline-block w-full mx-auto md:w-auto text-center">
          <a
            href={button.url}
            class="rv-button rv-button-white block md:inline-block"
          >
            <div class="rv-button-top">
              <span>{button.text}</span>
            </div>
            <div class="rv-button-bottom">
              <span>{button.text}</span>
            </div>
          </a>
        </li>
      </ul>
    </div>
  </div>
</section>

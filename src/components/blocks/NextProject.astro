---
// src/components/blocks/NextProject.astro

/*
================================================================================
Component: NextProject
Description: A section that links to the next project, showing a preview.
================================================================================
*/

import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

export interface Props {
  backgroundImage: ImageMetadata;
  heading: string;
  projectUrl: string;
  image: ImageMetadata;
  imageAlt: string;
  label: string;
  title: string;
  year: string;
}

const {
  backgroundImage,
  heading,
  projectUrl,
  image,
  imageAlt,
  label,
  title,
  year,
} = Astro.props;
---

<section class="pt-14 md:pt-16 lg:pt-[88px] xl:pt-[100px] pb-14 md:pb-16 lg:pb-[88px] xl:pb-[100px] relative">
  <div class="absolute left-1/2 scale-y-75 scale-x-[1.8] top-1/2 -translate-y-1/2 -translate-x-1/2">
    <Image src={backgroundImage} alt="gradient background" />
  </div>
  <div class="container">
    <h2
      class="text-[46px] sm:text-5xl md:text-[52px] max-md:text-left max-lg:leading-[1.33] lg:text-7xl font-normal !leading-[1.3] lg:tracking-[-2.88px] mb-9 xl:mb-[50px] text-appear"
      set:html={heading}
    />

    <a href={projectUrl}>
      <div class="flex flex-col md:flex-row items-center gap-10 reveal-me underline-hover-effect group">
        <figure class="md:max-w-[372px] max-md:w-full md:h-[328px] overflow-hidden">
          <Image
            src={image}
            alt={imageAlt}
            class="w-full h-full object-cover transition-all duration-500 group-hover:scale-125 group-hover:rotate-3"
          />
        </figure>

        <div class="self-start md:self-center">
          <p class="uppercase text-xs text-secondary dark:text-backgroundBody font-poppins font-normal leading-6 tracking-[8px]">
            {label}
          </p>

          <div class="blog-title mb-1">
            <h3 class="text-4xl md:text-[56px] md:leading-[1.2] md:tracking-[-1.68px] mt-6 mb-4">
              {title}
            </h3>
          </div>

          <p class="text-2xl text-[#000000b3] dark:text-dark-100 leading-[1.4] tracking-[0.48px]">
            /{year}
          </p>
        </div>
      </div>
    </a>
  </div>
</section>
---
// src/components/blocks/Marquee.astro

export interface Props {
  items: string[];
  direction?: 'normal' | 'reverse';
}

const { items, direction = 'normal' } = Astro.props;

// The marquee effect works by duplicating the content.
const marqueeItems = [...items, ...items]; 

const marqueeContainerClass = direction === 'reverse' 
  ? 'marquee-reverse-container' 
  : 'marquee-container';
---

<div class={marqueeContainerClass + " reveal-me"}>
  <div class="flex items-center justify-between py-2.5 pb-5">
    {marqueeItems.map(item => (
      <div class="flex items-center gap-6 mr-5">
        <span class="text-5xl sm:text-[55px] md:text-[67px] lg:text-[84px] xl:text-8xl font-medium leading-tight xl:leading-[1.1] tracking-[-2px] xl:tracking-[-2.88px] text-nowrap">
          {item}
        </span>
        <span class="mt-5">
          <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 40 40" fill="none">
            <path d="M20.002 0C20.002 0 19.789 11.2169 24.2871 15.7149C28.785 20.2129 40.002 20 40.002 20C40.002 20 28.785 19.7871 24.2871 24.2851C19.789 28.7831 20.002 40 20.002 40C20.002 40 20.2149 28.7831 15.7168 24.2851C11.2189 19.7871 0.00195312 20 0.00195312 20C0.00195312 20 11.2189 20.2129 15.7168 15.7149C20.2149 11.2169 20.002 0 20.002 0Z" class="fill-black dark:fill-backgroundBody" />
          </svg>
        </span>
      </div>
    ))}
  </div>
</div>
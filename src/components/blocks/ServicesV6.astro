---
// src/components/blocks/ServicesV6.astro
import ServiceRowV6, { type Service } from '../cards/ServiceRowV6.astro';

export interface Props {
  heading: string;
  description: string;
  button: {
    text: string;
    url: string;
  };
  services: Service[];
}

const { heading, description, button, services } = Astro.props;
---

<section class="pb-14 pt-14 md:pb-16 md:pt-16 lg:pb-[88px] lg:pt-[88px] xl:pb-[100px] xl:pt-[100px] overflow-hidden">
  <div class="container">
    <div class="flex flex-col md:flex-row gap-x-10 gap-y-4 justify-center lg:justify-between items-start mb-16 lg:mb-24">
      <div class="flex-1 md:self-start">
        <h2 class="text-appear" set:html={heading}></h2>
      </div>

      <div class="max-md:w-full flex-1 lg:w-[470px] md:self-end">
        <p class="text-appear max-w-lg md:text-right md:place-self-end">
          {description}
        </p>
        <ul class="justify-self-end max-md:w-full mt-5 md:mt-10 reveal-me">
          <li class="block md:inline-block w-full mx-auto md:w-auto text-center">
            <a href={button.url} class="rv-button rv-button-white block md:inline-block">
              <div class="rv-button-top">
                <span>{button.text}</span>
              </div>
              <div class="rv-button-bottom">
                <span>{button.text}</span>
              </div>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="max-w-[1170px] px-5 sm:px-10 lg:px-12 xl:px-0 w-full mx-auto reveal-me">
    {services.map(service => (
      <ServiceRowV6 service={service} />
    ))}
    <div class="border-b dark:border-dark"></div>
  </div>
</section>
---
// src/components/blocks/AboutDescriptionV5.astro

/*
================================================================================
Component: AboutDescriptionV5 (Payload Block Version)
Description: A simple block that displays a single, prominent paragraph of
             descriptive text from Payload CMS.
================================================================================
*/

export interface Props {
  description: any; // RichText from Payload
}

const { description } = Astro.props;

// Convert Payload RichText to HTML string if needed
const getTextContent = (richTextContent: any): string => {
  if (typeof richTextContent === 'string') {
    return richTextContent;
  }
  
  if (richTextContent?.root?.children) {
    return richTextContent.root.children
      .map((child: any) => {
        if (child.type === 'paragraph' && child.children) {
          return child.children.map((textNode: any) => textNode.text || '').join('');
        }
        return child.text || '';
      })
      .join(' ');
  }
  
  return '';
};

const textContent = getTextContent(description);
---

<section
  class="pt-14 md:pt-16 lg:pt-[88px] xl:pt-[100px] md:pb-16 lg:pb-[88px] xl:pb-[100px] relative overflow-hidden"
>
  <div class="container reveal-me">
    <h3
      class="reveal-text-2 text-2xl text-secondary/90 dark:text-backgroundBody/70 text-left lg:text-3xl xl:text-4xl font-normal lg:leading-[1.2] lg:tracking-[0.72px]"
      set:html={textContent}
    >
    </h3>
  </div>
</section>
---
// src/components/blocks/SectionHeaderCentered.astro
export interface Props {
  badgeText: string;
  heading: string;
  italicizedWord: string;
  description: string;
}

const { badgeText, heading, italicizedWord, description } = Astro.props;

const formattedHeading = heading.replace(
  italicizedWord,
  `<span class="font-instrument italic">${italicizedWord}</span>`
);
---
<div class="text-center mb-10 md:mb-20">
  <div class="rv-badge mb-3.5 md:mb-8 reveal-me inline-block">
    <span class="rv-badge-text">{badgeText}</span>
  </div>
  <h2 class="text-appear" set:html={formattedHeading}></h2>
  
  {description && (
    <p class="text-appear mt-1.5 md:mt-6 max-w-xl lg:max-w-3xl mx-auto">
      {description}
    </p>
  )}
</div>
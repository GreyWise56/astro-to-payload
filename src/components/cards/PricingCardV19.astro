<div
  class="bg-backgroundBody dark:bg-dark border dark:border-dark px-[30px] pt-[30px] min-w-full sm:min-w-[416px] min-h-[510px] relative reveal-me"
>
  {isFeatured && featuredBg && (
    <div
      class="absolute inset-0 bg-no-repeat bg-cover w-full h-full"
      style={`background-image: url(${featuredBg.src})`}
    ></div>
  )}

  <div class="flex justify-end mb-3 relative">
    <div class="rv-badge">
      <span class="rv-badge-text">{badge}</span>
    </div>
  </div>

  <h3 class="text-6xl leading-[60px] mb-[30px] max-sm:text-4xl relative">
    {price}
  </h3>
  <ul
    class="mt-10 [&>*:not(:last-child)]:mb-2 md:[&>*:not(:last-child)]:mb-3 relative"
  >
    {features.map(feature => (
      <li class="list-none flex gap-[10px] text-[17px] leading-[1.5] text-secondary/70 dark:text-backgroundBody/70">
        <span>
          <Fragment set:html={checkmarkIconLight} />
          <Fragment set:html={checkmarkIconDark} />
        </span>
        {feature}
      </li>
    ))}
  </ul>

  <div class="absolute bottom-8 w-[calc(100%-60px)]">
    <a href={button.url} class:list={[
        "rv-button !w-full",
        isFeatured ? "rv-button-primary" : "rv-button-white"
    ]}>
      <div class="rv-button-top !w-full !text-center">
        <span class="!font-normal">{button.text}</span>
      </div>
      <div class="rv-button-bottom !w-full !text-center">
        <span class="!font-normal">{button.text}</span>
      </div>
    </a>
  </div>
</div>

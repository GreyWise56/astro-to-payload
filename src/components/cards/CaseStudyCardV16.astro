---
// src/components/cards/CaseStudyCardV16.astro

/*
================================================================================
Component: CaseStudyCardV16
Description: A card for a single case study, featuring an image and title with
             a hover effect.
================================================================================
*/

import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

export interface Props {
  image: ImageMetadata;
  altText: string;
  title: string;
  url: string;
  isStaggered?: boolean; // For the top margin on staggered items
}

const { image, altText, title, url, isStaggered = false } = Astro.props;
---

<div class:list={["reveal-me underline-hover-effect group", { "md:mt-12 lg:mt-20": isStaggered }]}>
  <a href={url}>
    <figure class="overflow-hidden">
      <Image
        src={image}
        alt={altText}
        class="w-full h-full transition-all duration-500 group-hover:scale-125 group-hover:rotate-3"
      />
    </figure>
    <div class="blog-title mt-[26px] lg:mt-[30px] text-center">
      <h3
        class="capitalize text-center text-[27px] md:text-3xl lg:text-[42px] xl:text-[51px] font-normal leading-tight lg:leading-[1.2] lg:tracking-[-1.68px]"
      >
        {title}
      </h3>
    </div>
  </a>
</div>

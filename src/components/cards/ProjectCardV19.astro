---
// src/components/cards/ProjectCardV19.astro

/*
================================================================================
Component: ProjectCardV19
Description: A card for showcasing a single project in a grid. Includes a
             feature image, title, description, and a hover effect button.
================================================================================
*/

import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

// Define the properties for a single project card
export interface Props {
  image: ImageMetadata;
  altText: string;
  title: string;
  description: string;
  url: string;
  arrowIcon: ImageMetadata;
}

const { image, altText, title, description, url, arrowIcon } = Astro.props;
---

<div class="reveal-me underline-hover-effect group relative">
  <a href={url}>
    <figure class="overflow-hidden">
      <Image
        src={image}
        alt={altText}
        class="w-full h-full transition-all duration-500 group-hover:scale-125 group-hover:rotate-3"
      />
    </figure>
  </a>

  <a href={url}>
    <div class="blog-title">
      <h3>{title}</h3>
    </div>
  </a>
  <p
    class="text-[13px] leading-4 tracking-[2px] mt-3 uppercase font-normal text-secondary dark:text-backgroundBody"
  >
    {description}
  </p>
  <div class="border-b dark:border-dark mt-[30px]"></div>

  <!-- Blog Hover Button -->
  <a href={url}>
    <div
      class="uppercase absolute top-1/2 left-1/2 -translate-x-[90%] translate-y-[35%] group-hover:translate-x-[-50%] group-hover:translate-y-[-50%] transition-all duration-500 ease-in-out opacity-0 group-hover:opacity-100 flex justify-center items-center gap-1 bg-primary px-8 py-6 w-[136px] h-[74px] scale-95 group-hover:scale-100"
    >
      <span class="text-secondary">view</span>
      <Image src={arrowIcon} alt="Arrow icon" />
    </div>
  </a>
</div>

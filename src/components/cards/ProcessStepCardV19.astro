---
// src/components/cards/ProcessStepCardV19.astro

/*
================================================================================
Component: ProcessStepCardV19
Description: A card component for a single step in a process, showing the step
             number, title, and description.
================================================================================
*/

// Define the properties for a single process step card
export interface Props {
  stepNumber: string;
  title: string;
  description: string;
}

const { stepNumber, title, description } = Astro.props;
---

<div class="reveal-me pt-6 grow w-full sm:w-[48%] xl:grow">
  <div
    class="border dark:border-dark mx-auto min-h-[300px] px-5 pt-10 pb-[42px] grid grid-cols-1 content-between text-center relative"
  >
    <div
      class="absolute left-1/2 -translate-x-1/2 -top-4 inline-flex justify-center items-center bg-secondary dark:bg-backgroundBody px-4 pt-2.5 pb-2 rounded-[72px]"
    >
      <span
        class="text-backgroundBody dark:text-secondary text-xs uppercase leading-[1.2] tracking-[0.96px]"
        >{stepNumber}</span
      >
    </div>
    <h6
      class="text-2xl font-normal leading-[1.1] text-black dark:text-white"
    >
      {title}
    </h6>
    <p
      class="text-base font-normal leading-[1.3] text-black/70 dark:text-backgroundBody/70"
    >
      {description}
    </p>
  </div>
</div>

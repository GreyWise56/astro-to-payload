---
// src/pages/homepage-v10.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroV10 from '../components/blocks/HeroV10.astro';
import AboutV10, { type Stat } from '../components/blocks/AboutV10.astro';
import ProjectsV10 from '../components/blocks/ProjectsV10.astro';
import Marquee from '../components/blocks/Marquee.astro';
import ServicesV10 from '../components/blocks/ServicesV10.astro';
import AwardsV10 from '../components/blocks/AwardsV10.astro';
import BlogV10 from '../components/blocks/BlogV10.astro';
import Cta from '../components/blocks/Cta.astro';


// --- Asset Imports ---
import heroBg from '../assets/images/hero/hero-v10.png'; 
import circleLogoLight from '../assets/images/icons/text-circle-logo.png';
import circleLogoDark from '../assets/images/icons/text-circle-dark-logo.png';
import projectImg1 from '../assets/images/blog-img/blog-img-24.png';
import projectImg2 from '../assets/images/blog-img/blog-img-22.png';
import projectImg3 from '../assets/images/blog-img/blog-img-23.png';
import projectImg4 from '../assets/images/blog-img/blog-img-25.png';
import blogImg1 from '../assets/images/blog-img/blogV3-img-4.png';
import blogImg2 from '../assets/images/blog-img/blogV3-img-5.png';
import topArrow from '../assets/images/icons/top-arrow.svg';
import topArrowDark from '../assets/images/icons/top-arrow-dark.svg';
// Images for the CTA slider
import agent1 from '../assets/images/agent/01.jpg';
import agent2 from '../assets/images/agent/02.jpg';
import agent3 from '../assets/images/agent/03.jpg';

// --- Page Data ---
const pageTitle = "JAM Group - Homepage v10";
const pageDescription = "A full-service agency homepage.";

const aboutStats: Stat[] = [
  { value: 14, label: "Years of experience" },
  { value: 80, label: "Projects done", suffix: "+" },
  { value: 280, label: "Satisfied clients", suffix: "+" },
  { value: 9, label: "Trusted partners" },
  { value: 19, label: "Awards" },
  { value: 39, label: "Professional members" },
];

const projectsData = [
  { image: projectImg1, altText: "TheMotto project", date: "May 10, 2020", year: "2020", title: "TheMotto", url: "#" },
  { image: projectImg2, altText: "Lovelace Studio project", date: "June 25, 2021", year: "2021", title: "Lovelace Studio", url: "#" },
  { image: projectImg3, altText: "Miami Adventure project", date: "June 25, 2022", year: "2022", title: "Miami Adventure", url: "#" },
  { image: projectImg4, altText: "FightClub project", date: "June 10, 2023", year: "2023", title: "FightClub", url: "#" },
];

const marqueeItems1 = ["Creative Development", "Visual Design"];
const marqueeItems2 = ["Since 1993", "Based in New York", "Award-Winning Agency"];

const servicesData = [
    {
        title: "Research",
        description: "What specific research are you interested in? Research can range across a variety of fields such as:",
        listItems: ["Scientific research (e.g., medical, environmental, technological studies)", "Market research (consumer trends, competitor analysis)"],
        url: "#"
    },
    {
        title: "Alchemy Studio",
        description: "What specific research are you interested in? Research can range across a variety of fields such as:",
        listItems: ["Scientific research (e.g., medical, environmental, technological studies)", "Market research (consumer trends, competitor analysis)"],
        url: "#"
    },
    {
        title: "Rhythms Media",
        description: "What specific research are you interested in? Research can range across a variety of fields such as:",
        listItems: ["Scientific research (e.g., medical, environmental, technological studies)", "Market research (consumer trends, competitor analysis)"],
        url: "#"
    },
    {
        title: "Sound Studios",
        description: "What specific research are you interested in? Research can range across a variety of fields such as:",
        listItems: ["Scientific research (e.g., medical, environmental, technological studies)", "Market research (consumer trends, competitor analysis)"],
        url: "#"
    }
];
const awardsData = [
    { year: "2020", title: "Innovation in Corporate Video", category: "Work Shop" },
    { year: "2021", title: "Best Documentary Feature, Paris Film Festival", category: "fury member" },
    { year: "2022", title: "Best Music Video, European Music Awards", category: "Taken team" },
    { year: "2023", title: "Best Culinary Series, Taste Awards", category: "Hono mention" },
];
const blogPosts = [
    {
        date: "June 7, 2020",
        title: "Unlocking the Secrets of Cinematic Storytelling Tips from Parisian Filmmakers",
        url: "#",
        image: blogImg1,
        altText: "A person standing in front of a colorful abstract background."
    },
    {
        date: "May 7, 2022",
        title: "Behind the Scenes Crafting a Music Video that Resonates",
        url: "#",
        image: blogImg2,
        altText: "A person playing a guitar on a dimly lit stage."
    }
];
const ctaSliderImages = [agent1, agent2, agent3];
---

<BaseLayout title={pageTitle} description={pageDescription}>

  <HeroV10
    image={heroBg}
    heading="Transforming vision <br /> into reality"
  />

  <AboutV10
    logoLight={circleLogoLight}
    logoDark={circleLogoDark}
    spinningText="Building Brands, and Creating Impact"
    heading="With years of industry expertise..."
    paragraph="With years of experience and a diverse portfolio..."
    stats={aboutStats}
  />

  <ProjectsV10
    heading=`<span class="italic font-instrument">Our latest</span><br class="hidden md:block" />projects`
    description="Each project reflects our dedication to excellence, creativity, and innovation."
    button={{ text: "See More Projects", url: "#" }}
    projects={projectsData}
  />

  <section class="pt-14 md:pt-16 lg:pt-[88px] xl:pt-[100px] pb-14 md:pb-16 lg:pb-[88px] xl:pb-[100px] relative overflow-hidden">
    <Marquee items={marqueeItems1} />
    <div class="border-t dark:border-dark">
      <Marquee items={marqueeItems2} direction="reverse" />
    </div>
  </section>

  <ServicesV10
    badge="Services"
    heading=`Elevating Your <br /><span class="font-instrument italic">Digital</span> Presence`
    description="We offer expert digital solutions to boost your brand and online presence. Our services drive growth, engagement, and success in the digital world."
    button={{ text: "Get Free Quotes", url: "/contact" }}
    services={servicesData}
  />

   <AwardsV10
    heading=`<i class="font-instrument"> Awards we </i><br class="hidden md:block" />received`
    description="Our user-centered design encourages productivity and boosts revenue."
    awards={awardsData}
  />

  <BlogV10
    heading=`<span class="italic font-instrument"> Latest</span> <br />blog & news`
    button={{ text: "View Blog", url: "#" }}
    posts={blogPosts}
    arrowIcon={topArrow}
    arrowIconDark={topArrowDark}
  />

   <Cta
    headingPart1="Let's Talk!"
    headingPart2="with us."
    subheading="A virtual coffee?"
    sliderImages={ctaSliderImages}
    button={{ text: "Contact Us", url: "/contact" }}
  />
  </BaseLayout>
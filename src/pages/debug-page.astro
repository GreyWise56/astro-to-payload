---
// src/pages/debug-page.astro - Debug page data structure

import BaseLayout from '../layouts/BaseLayout.astro';
import { getPageBySlug } from '../lib/payload-api';

// Test with a specific slug
const testSlug = 'test-v16'; // Or whatever slug you used

let pageData;
let error;

try {
  pageData = await getPageBySlug(testSlug);
} catch (err) {
  const errorMessage = err instanceof Error ? err.message : 'Unknown error occurred';
  error = errorMessage;
}
---

<BaseLayout title="Debug Page Data" description="Debug page data structure">
  <div class="container mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold mb-8">Debug Page Data</h1>
    
    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-4">Testing Slug: {testSlug}</h2>
    </div>

    {error ? (
      <div class="bg-red-100 border border-red-400 text-red-700 p-4 rounded mb-8">
        <strong>Error:</strong> {error}
      </div>
    ) : pageData ? (
      <div class="space-y-6">
        <!-- Basic Page Info -->
        <div class="bg-green-100 border border-green-400 text-green-700 p-4 rounded">
          <h3 class="font-semibold">‚úÖ Page Found</h3>
          <p><strong>Title:</strong> {pageData.title}</p>
          <p><strong>Slug:</strong> {pageData.slug}</p>
          <p><strong>ID:</strong> {pageData.id}</p>
        </div>

        <!-- Page Blocks Info -->
        <div class="bg-blue-100 border border-blue-400 text-blue-700 p-4 rounded">
          <h3 class="font-semibold">üì¶ Page Blocks</h3>
          <p><strong>Has pageBlocks:</strong> {pageData.pageBlocks ? 'Yes' : 'No'}</p>
          <p><strong>Blocks Count:</strong> {pageData.pageBlocks?.length || 0}</p>
          {pageData.pageBlocks && pageData.pageBlocks.length > 0 && (
            <div class="mt-2">
              <strong>Block Types:</strong>
              <ul class="list-disc list-inside ml-4">
                {pageData.pageBlocks.map((block: any, index: number) => (
                  <li>Block {index + 1}: {block.blockType}</li>
                ))}
              </ul>
            </div>
          )}
        </div>

        <!-- Raw Page Data -->
        <div class="bg-gray-100 border border-gray-300 p-4 rounded">
          <h3 class="font-semibold mb-2">üîç Raw Page Data</h3>
          <details>
            <summary class="cursor-pointer">Click to view raw data</summary>
            <pre class="mt-4 text-xs overflow-auto bg-white p-4 rounded border max-h-96">
{JSON.stringify(pageData, null, 2)}
            </pre>
          </details>
        </div>

        <!-- First Block Detail (if exists) -->
        {pageData.pageBlocks && pageData.pageBlocks.length > 0 && (
          <div class="bg-purple-100 border border-purple-400 text-purple-700 p-4 rounded">
            <h3 class="font-semibold mb-2">üß± First Block Detail</h3>
            <pre class="text-xs overflow-auto bg-white p-4 rounded border max-h-64">
{JSON.stringify(pageData.pageBlocks[0], null, 2)}
            </pre>
          </div>
        )}
      </div>
    ) : (
      <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 p-4 rounded">
        <strong>No page found with slug:</strong> {testSlug}
      </div>
    )}

    <!-- Action Links -->
    <div class="mt-8 space-x-4">
      <a href="http://localhost:3000/admin/collections/pages" class="inline-block px-6 py-3 bg-blue-600 text-white rounded hover:bg-blue-700">
        Payload Pages Admin
      </a>
      <a href="/test-payload" class="inline-block px-6 py-3 bg-green-600 text-white rounded hover:bg-green-700">
        API Test Page
      </a>
      <a href="/" class="inline-block px-6 py-3 bg-gray-600 text-white rounded hover:bg-gray-700">
        Back to Home
      </a>
    </div>
  </div>
</BaseLayout>